<div class="gray_background">
  <div class="wrapper clearfix">
    <%= render 'layouts/flash_messages' %>
    <div class="main_content">
      <h1>Orders</h1>
      <table class="table">
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.stripe_id %></td>
            <td><%= order.created_at.to_s(:short) %></td>
            <td><%= link_to "Cancel Subscription",
                            cancel_order_url(order),
                            class: "btn btn-mini btn-danger cancel #{order.status == 'canceled' ? 'disabled' : ''}" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.cancel').on('click', function() {
      confirm('Are you super sure?');
  })
</script>