<%= render 'layouts/flash_messages' %> 
<%= render 'orders/homepage/show_dont_tell' %> 
<%#= render 'orders/homepage/key_points' %>
<%#= render 'orders/homepage/other_points' %>
<%= render 'orders/homepage/middle_reserve' %>
<%= render 'orders/homepage/social' %>
<%#= render 'orders/homepage/press' %>

<div class="modal hide fade" id="myModal">
  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>We are under construction!</h3>
  </div>
  <div class="modal-body">
    <div class="text-center">
      <%= image_tag "/baby.jpeg", alt: "construction" %>
    </div>
    <br />
    <p class="text-center">
      CraftCrate is currently being built and will be fully up and running for you shortly! Please to click around and learn a bit more about us.
    </p>
    <p class="text-center">
      Leave your email and we will let you know as soon as you can get your crafting started.
    </p>
    <br />
    <div class="text-center">
      <%= form_for @email, url: {action: "create", controller: "email_lists"} do |f| %>
        <%= f.email_field :email %>
        <%= submit_tag "Add to list", class: "btn btn-info", id: "email-list" %>
      <% end %>
    </div>
  </div>
</div>


<script type="text/javascript">
    $(window).load(function(){
      if (localStorage['visited'] != 'true') { 
        $('#myModal').modal('show');
      }

      $('#email-list').click(function() {
        localStorage['visited'] = 'true'
      }) 
    });
</script>
