<div class="container widen gray">
	<div class="row-fluid">
		<h2 class="center">DIY</h2>
		<ul class="thumbnails">
			<% @diys.each_with_index do |diy, idx| %>
				<% if idx % 3 == 0 || idx == 0 %>
					<div class="row diy-row">
				<% end %>
				<li class="span4 diy-tile">
					<div class="thumbnail">
						<img class="nail-pic img-rounded img-responsive" 
									alt="craft" 
									src="<%= diy.image %>">
						<div class="caption">
							<h5><strong><%= diy.title %></strong></h5>
							<p>
								<pre class="diy-body"><%= diy.body %></pre>
							</p>
							<p>
								<a href="#" class="btn btn-primary btn-margin-right">Purchase</a>
								<a href="<%=diy_url(diy)%>" class="btn btn-lightgray">More Details</a>
							</p>
						</div>
					</div>
				</li>
				<% if (idx + 1) % 3 == 0 %>
					</div>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>